{
  "id": null,
  "uid": "tafsiri-dashboard",
  "title": "Tafsiri Metrics",
  "tags": ["tafsiri", "llm"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "graph",
      "title": "Translate Request Rate",
      "targets": [
        {
          "expr": "rate(translate_requests_total[1m])",
          "legendFormat": "requests/sec",
          "interval": ""
        }
      ],
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Request Latency (Avg)",
      "targets": [
        {
          "expr": "rate(translate_request_latency_seconds_sum[1m]) / rate(translate_request_latency_seconds_count[1m])",
          "legendFormat": "avg latency (s)",
          "interval": ""
        }
      ],
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Total Translations",
      "targets": [
        {
          "expr": "translate_requests_total",
          "legendFormat": "",
          "interval": ""
        }
      ],
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Translation Latency Max",
      "targets": [
        {
          "expr": "max_over_time(translate_request_latency_seconds[1m])",
          "legendFormat": "",
          "interval": ""
        }
      ],
      "datasource": "Prometheus",
      "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 }
    }
  ]
}
